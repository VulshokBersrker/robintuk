{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Robintuk",
  "version": "0.2.3",
  "identifier": "com.robintuk",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Robintuk",
        "width": 1400,
        "height": 1000,
        "decorations": false,
        "resizable": true,
        "fullscreen": false,
        "label": "main"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost",
        "font-src": ["https://fonts.gstatic.com"],
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com",
        "media-src": "'self' asset: http://asset.localhost"
      },
      "freezePrototype": true,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$APPDATA/db/**", "$RESOURCE/**", "$HOME/.config/**"],
          "deny": ["$APPDATA/db/*.stronghold"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi", "rpm", "appimage", "deb"],
    "category": "Music",
    "copyright": "copyright",    
    "shortDescription": "A beautiful music player made with Tauri and React",
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/app-icon.ico",
      "icons/app-icon.png"
    ],
    "fileAssociations": [
      { "ext": ["mp3"] },
      { "ext": ["m4a"] },
      { "ext": ["flac"] },
      { "ext": ["wav"] },
      { "ext": ["ogg"] },
      { "ext": ["opus"] },
      { "ext": ["aac"] },
      { "ext": ["aiff"] }
    ],
    "windows": {
      "allowDowngrades": true,
      "signCommand": null,
      "tsp": false,
      "nsis": {
        "installerIcon": "icons/app-icon.ico",
        "headerImage": "icons/app-icon.ico",
        "sidebarImage": "icons/app-icon.ico"
      },
      "webviewInstallMode": {
        "silent": true,
        "type": "offlineInstaller"
      },
      "wix": {
        "language": "en-US",
        "dialogImagePath": "wix/dialogImage.jpg",
        "bannerPath": "wix/bannerImage.jpg"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true,
        "files": {}
      }
    }
  }
}
